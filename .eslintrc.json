  "rules": {
    "no-console": ["error", { "allow": ["warn", "error", "info"] }],
    "no-unused-vars": "error",
    "import/no-anonymous-default-export": "error",
    // "import/no-unused-modules": [1, { "unusedExports": true }], // TODO: Check unused modules (Kiểm tra module không sử dụng)
    "no-undef": "off",
    "object-curly-spacing": "off",
    "max-len": "off",
    "indent": "off",
    "no-useless-catch": "off",
    "camelcase": "off",
    "new-cap": "off",
    "operator-linebreak": "off",
    "quotes": "off",
    "comma-spacing": "off"
  }
