{
  "extends": ["next", "prettier", "next/core-web-vitals", "eslint:recommended"],
  "plugins": ["import", "prettier"],
  "rules": {
    "no-console": ["error", { "allow": ["warn", "error", "info"] }],
    "no-unused-vars": "error",
    "@next/next/no-document-import-in-page": "off",
    "import/no-anonymous-default-export": "error",
    // "import/no-unused-modules": [1, { "unusedExports": true }], // Dùng để kiểm tra các module không sử dụng
    "no-undef": "off",
    "object-curly-spacing": "off",
    "require-jsdoc": "off",
    "max-len": "off",
    "indent": "off",
    "no-useless-catch": "off",
    "camelcase": "off",
    "new-cap": "off",
    "operator-linebreak": "off",
    "quotes": "off",
    "comma-spacing": "off"
  }
}
