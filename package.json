{
  "name": "@base/root",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "packageManager": "pnpm@8.9.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "turbo build --filter @www/*",
    "dev": "turbo dev --filter @www/*",
    "lint": "biome lint --apply .",
    "format": "biome format . --write",
    "check": "biome check --apply .",
    "prepare": "husky && husky install",
    "build:web": "turbo build --filter @www/web",
    "dev:web": "turbo dev --filter @www/web",
    "dev:api": "turbo dev --filter @www/api"
  },
  "devDependencies": {
    "@biomejs/biome": "1.6.1",
    "@commitlint/cli": "19.1.0",
    "@commitlint/config-conventional": "19.1.0",
    "husky": "9.0.11",
    "turbo": "1.12.5"
  }
}
