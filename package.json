{
  "name": "vibeverse",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Vibeverse",
    "url": "https://vibeverse.com"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:eslint": "eslint --no-ignore --max-warnings=0 --fix \"**/*.{js,jsx}\"",
    "lint:staged": "lint-staged",
    "format": "pnpm run format:write && pnpm run format:check",
    "format:write": "prettier --write \"**/*.{js,jsx,mdx}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,mdx}\"",
    "prepare": "husky && husky install"
  },
  "dependencies": {
    "next": "14.1.2",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/eslint-parser": "^7.23.10",
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "autoprefixer": "^10.0.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.1.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "shell-quote": "^1.8.1",
    "tailwindcss": "^3.3.0"
  }
}
