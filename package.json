{
  "name": "@vibeverse/root",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Vibeverse",
    "url": "https://vibeverse.com"
  },
  "packageManager": "pnpm@8.9.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build --filter @vibeverse/*",
    "dev": "turbo dev --filter @vibeverse/*",
    "lint": "biome check .",
    "lint:fix": "biome check --apply-unsafe .",
    "format:write": "biome format . --write",
    "prepare": "husky && husky install"
  },
  "dependencies": {
    "@biomejs/biome": "1.5.3",
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "husky": "^9.0.11",
    "turbo": "^1.12.5"
  }
}
