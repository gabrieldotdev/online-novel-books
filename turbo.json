{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**"]
		},
		"build:web": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"dev:web": {
			"cache": false
		},
		"dev:api": {
			"cache": false
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"clean": { "cache": false }
	}
}
