{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": { "cache": false },
    "lint:fix": { "cache": false },
    "format:write": { "cache": false },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": { "cache": false }
  }
}
